<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">

    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">evince_blog_listing.evince_blog_listing_data_source</item>
        </item>
    </argument>

    <settings>
        <spinner>evince_blog_columns</spinner>
        <deps>
            <dep>evince_blog_listing.evince_blog_listing_data_source</dep>
        </deps>
    </settings>

    <!-- DATA SOURCE -->
    <dataSource name="evince_blog_listing_data_source"
                component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="indexField" xsi:type="string">blog_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Evince\Blogs\Model\Blog\DataProvider"
                      name="evince_blog_listing_data_source">
            <settings>
                <requestFieldName>blog_id</requestFieldName>
                <primaryFieldName>blog_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <!-- TOOLBAR -->
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>

        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>

        <!-- Full-text keyword search box -->
        <filterSearch name="fulltext"/>

        <!-- Column-level filter panel -->
        <filters name="listing_filters">
            <settings>
                <templates>
                    <filters>
                        <select>
                            <param name="template" xsi:type="string">ui/grid/filters/elements/ui-select</param>
                            <param name="component" xsi:type="string">Magento_Ui/js/form/element/ui-select</param>
                        </select>
                    </filters>
                </templates>
            </settings>
        </filters>

        <paging name="listing_paging"/>

        <!-- Mass action: Delete -->
        <massaction name="listing_massaction">
            <action name="delete">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to delete the selected blogs?</message>
                        <title translate="true">Delete Blogs</title>
                    </confirm>
                    <url path="blogs/blog/massDelete"/>
                    <type>delete</type>
                    <label translate="true">Delete</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>

    <!-- COLUMNS -->
    <columns name="evince_blog_columns">

        <settings>
            <editorConfig>
                <param name="enabled" xsi:type="boolean">false</param>
            </editorConfig>
            <childDefaults>
                <param name="fieldAction" xsi:type="array">
                    <item name="provider" xsi:type="string">evince_blog_listing.evince_blog_listing.evince_blog_columns.actions</item>
                    <item name="target" xsi:type="string">applyAction</item>
                    <item name="params" xsi:type="array">
                        <item name="0" xsi:type="string">view</item>
                        <item name="1" xsi:type="string">${ $.$data.rowIndex }</item>
                    </item>
                </param>
            </childDefaults>
        </settings>

        <!-- Checkbox column for mass-select -->
        <selectionsColumn name="ids">
            <settings>
                <indexField>blog_id</indexField>
            </settings>
        </selectionsColumn>

        <column name="blog_id">
            <settings>
                <filter>text</filter>
                <label translate="true">Blog ID</label>
                <sorting>asc</sorting>
            </settings>
        </column>

        <column name="blog_topic">
            <settings>
                <filter>text</filter>
                <label translate="true">Blog Topic</label>
            </settings>
        </column>

        <column name="author_name">
            <settings>
                <filter>text</filter>
                <label translate="true">Author</label>
            </settings>
        </column>

        <column name="created_at"
                class="Magento\Ui\Component\Listing\Columns\Date"
                component="Magento_Ui/js/grid/columns/date">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <label translate="true">Created At</label>
            </settings>
        </column>

        <!-- Actions column: View + Delete -->
        <actionsColumn name="actions"
                       class="Evince\Blogs\Ui\Component\Listing\Column\BlogActions">
            <settings>
                <indexField>blog_id</indexField>
                <label translate="true">Actions</label>
            </settings>
        </actionsColumn>

    </columns>

</listing>